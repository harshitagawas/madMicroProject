<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tbr_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="0dp"
    >

    <!-- Book spine container with background image -->
    <RelativeLayout
        android:id="@+id/book_bg"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/blue_book"
        android:padding="4dp">

        <!-- Checkbox for book status -->
        <CheckBox
            android:id="@+id/checkBoxRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp" />

        <!-- Book title with vertical text orientation -->
        <TextView
            android:id="@+id/textViewBook"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_toEndOf="@id/checkBoxRead"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:rotation="0"
            android:text="Book Title"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"

            />
    </RelativeLayout>
</LinearLayout>